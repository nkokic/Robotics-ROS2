<launch>
    <let name="urdf_path" value="$(find-pkg-share robot_description)/urdf/bob_ros_urdf.xacro" />
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <let name="gazebo_world_path" value="$(find-pkg-share robot_bringup)/worlds/depot.sdf" />
    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="$(var gazebo_world_path) -r" />
    </include>

    <node pkg="ros_gz_sim" exec="create" args="-topic robot_description -x -8.00 -y 0.00 -z 0.2 -R 0.00 -P 0.00 -Y 0.00">
        <param name="use_sim_time" value="True" />
    </node>
    
</launch>
