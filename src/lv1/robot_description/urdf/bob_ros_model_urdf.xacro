<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="bob_ros_macro_urdf.xacro"/>

    <xacro:macro name="bob_ros">
        <link name= "base_link">
            <visual>
                <geometry>
                    <box size="0.5 0.3 0.2"/>
                </geometry>
                <material name="red">
                    <color rgba="1.0 0 0 1"/>
                </material>
            </visual>
            <collision>
                <geometry>
                    <box size="0.5 0.3 0.2"/>
                </geometry>
            </collision>
            <inertial>
                <mass value="1.0"/>
                <inertia ixx="0.015" iyy="0.0208" izz="0.0208" ixy="0" ixz="0" iyz="0"/>
            </inertial>
        </link>

        <xacro:wheel_link prefix="front_right" length="0.05" radius="0.1"/>
        <xacro:wheel_link prefix="front_left" length="0.05" radius="0.1"/>
        <xacro:wheel_link prefix="back_right" length="0.05" radius="0.1"/>
        <xacro:wheel_link prefix="back_left" length="0.05" radius="0.1"/>

        <joint name="front_left_wheel_joint" type="continuous">
            <axis xyz="0 0 1"/>
            <parent link="base_link"/>
            <child link="front_left_wheel"/>
            <origin rpy="-1.5708 0 0" xyz="0.15 0.175 -.085"/>
        </joint>

        <joint name="front_right_wheel_joint" type="continuous">
            <axis xyz="0 0 1"/>
            <parent link="base_link"/>
            <child link="front_right_wheel"/>
            <origin rpy="-1.5708 0 0" xyz="0.15 -0.175 -.085"/>
        </joint>

        <joint name="back_left_wheel_joint" type="continuous">
            <axis xyz="0 0 1"/>
            <parent link="base_link"/>
            <child link="back_left_wheel"/>
            <origin rpy="-1.5708 0 0" xyz="-0.15 0.175 -.085"/>
        </joint>

        <joint name="back_right_wheel_joint" type="continuous">
            <axis xyz="0 0 1"/>
            <parent link="base_link"/>
            <child link="back_right_wheel"/>
            <origin rpy="-1.5708 0 0" xyz="-0.15 -0.175 -.085"/>
        </joint>

        <link name= "lidar_link">
            <visual>
                <geometry>
                    <cylinder length="0.1" radius="0.05"/>
                </geometry>
                <material name="black">
                    <color rgba="0 0 0 1"/>
                </material>
            </visual>
            <collision>
                <geometry>
                    <cylinder length="0.1" radius="0.05"/>
                </geometry>
            </collision>
            <inertial>
                <mass value="1.0"/>
                <inertia ixx="0.0005" iyy="0.0005" izz="0.0005" ixy="0" ixz="0" iyz="0"/>
            </inertial>
        </link>

        <joint name="lidar_link_joint" type="fixed">
            <axis xyz="0 0 1"/>
            <parent link="base_link"/>
            <child link="lidar_link"/>
            <origin rpy="0 0 3.14" xyz="0 0 .15"/>
        </joint>

        <link name= "camera_link">
            <visual>
                <geometry>
                    <box size="0.05 0.05 0.05"/>
                </geometry>
                <material name="black">
                    <color rgba="0 0 0 1"/>
                </material>
            </visual>
            <collision>
                <geometry>
                    <box size="0.05 0.05 0.05"/>
                </geometry>
            </collision>
            <inertial>
                <mass value="0"/>
                <inertia ixx="0" iyy="0" izz="0" ixy="0" ixz="0" iyz="0"/>
            </inertial>
        </link>

        <joint name="camera_link_joint" type="fixed">
            <axis xyz="0 0 1"/>
            <parent link="base_link"/>
            <child link="camera_link"/>
            <origin rpy="0 0 0" xyz="0.275 0 .075"/>
        </joint>
    </xacro:macro>
</robot>